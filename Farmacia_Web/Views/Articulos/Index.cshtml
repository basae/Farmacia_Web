@model IEnumerable<Farmacia_Web.ARTICULO>

@{
    ViewBag.Title = "Articulos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Guardar")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            Unidad
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Existencia)
        </th>
        <th>
            Precio Unitario
        </th>
        <th>
            Precio Venta
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @(string.Format("{0:C}", item.Precio))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidad_Medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existencia)
            </td>
            <td>
                @(string.Format("{0:C}", item.Precio_Unitario))
            </td>
            <td>
                @(string.Format("{0:C}", item.Precio_Venta))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                @Html.ActionLink("Editar", "Modificar", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { Id = item.Id }) |
                @Html.ActionLink("Ver", "Consulta", new { Id = item.Id })
            </td>
        </tr>
    }

</table>
